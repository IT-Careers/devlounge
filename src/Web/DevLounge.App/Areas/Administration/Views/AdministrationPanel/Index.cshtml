@model AdministrationPanelModel

<main class="forum-admin-panel">
    <div class="forum-admin-panel-column forum-admin-panel-sections">
        <header class="forum-admin-panel-column-header">Sections</header>
        <main class="forum-admin-panel-column-content">
            @foreach(var forumSection in Model.Sections) {
                <div class="forum-admin-panel-column-element">
                    <div class="forum-admin-panel-column-element-label">@(forumSection.DeletedBy != null ? "[Deleted] " + forumSection.Name : forumSection.Name)</div>
                    <div class="forum-admin-panel-column-element-actions">
                        <img src="~/images/icons/kebab-menu.svg" id="@forumSection.Id" data-name="@forumSection.Name" />
                    </div>
                </div>
            }
        </main>
        <footer class="forum-admin-panel-column-options">
            <div class="forum-admin-panel-create-button">
                <span class="forum-admin-panel-create-button-icon">+</span>
                <a asp-area="Administration" asp-controller="ForumSectionsAdministration" asp-action="Create" class="forum-admin-panel-create-button-label">Create Section</a>
            </div>
        </footer>
    </div>
    <div class="forum-admin-panel-column forum-admin-panel-categories">
        <header class="forum-admin-panel-column-header">Categories</header>
        <main class="forum-admin-panel-column-content">
            @foreach (var forumCategory in Model.Categories)
            {
                <div class="forum-admin-panel-column-element">
                    <div class="forum-admin-panel-column-element-label">@(forumCategory.DeletedBy != null ? "[Deleted] " + forumCategory.Name : forumCategory.Name)</div>
                    <div class="forum-admin-panel-column-element-actions">
                        <img src="~/images/icons/kebab-menu.svg" id="@forumCategory.Id" data-name="@forumCategory.Name" />
                    </div>
                </div>
            }
        </main>
        <footer class="forum-admin-panel-column-options">
            <div class="forum-admin-panel-create-button">
                <span class="forum-admin-panel-create-button-icon">+</span>
                <a asp-area="Administration" asp-controller="ForumCategoriesAdministration" asp-action="Create" class="forum-admin-panel-create-button-label">Create Category</a>
            </div>
        </footer>
    </div>
    <div class="forum-admin-panel-column">
        <header class="forum-admin-panel-column-header">Threads</header>
        <main class="forum-admin-panel-column-content">
            @foreach (var forumThread in Model.Threads)
            {
                <div class="forum-admin-panel-column-element">
                    <div class="forum-admin-panel-column-element-label">@forumThread.Title</div>
                    <div class="forum-admin-panel-column-element-actions">
                        <img src="~/images/icons/kebab-menu.svg" />
                    </div>
                </div>
            }
        </main>
        <footer class="forum-admin-panel-column-options">
            <div class="forum-admin-panel-create-button">
                <span class="forum-admin-panel-create-button-icon">+</span>
                <a asp-controller="ForumThreads" asp-action="Create" class="forum-admin-panel-create-button-label">Create Thread</a>
            </div>
        </footer>
    </div>
    <div class="forum-admin-panel-column">
        <header class="forum-admin-panel-column-header">Users</header>
        <main class="forum-admin-panel-column-content">
            @foreach (var forumUser in Model.Users)
            {
                <div class="forum-admin-panel-column-element">
                    <div class="forum-admin-panel-column-element-label">@forumUser.UserName</div>
                    <div class="forum-admin-panel-column-element-actions">
                        <img src="~/images/icons/kebab-menu.svg" />
                    </div>
                </div>
            }
        </main>
        <footer class="forum-admin-panel-column-options">
            <div class="forum-admin-panel-create-button">
                <span class="forum-admin-panel-create-button-icon">+</span>
                <a href="create-user.html" class="forum-admin-panel-create-button-label">Create User</a>
            </div>
        </footer>
    </div>
</main>

@{
    var forumSectionsContextMenuConfiguration = new AdministrationPanelContextMenuConfiguration { 
        ContextMenuId = "forum-sections-context-menu",
        ScriptUrl = "/js/adminPanelForumSectionsContextMenu.js" 
    };
    var forumCategoriesContextMenuConfiguration = new AdministrationPanelContextMenuConfiguration { 
        ContextMenuId = "forum-categories-context-menu",
        ScriptUrl = "/js/adminPanelForumCategoriesContextMenu.js" 
    };
}

<partial name="_AdminPanelDeleteModalPartial" />
<partial name="_AdminPanelContextMenuPartial" model="forumSectionsContextMenuConfiguration" />
<partial name="_AdminPanelContextMenuPartial" model="forumCategoriesContextMenuConfiguration" />