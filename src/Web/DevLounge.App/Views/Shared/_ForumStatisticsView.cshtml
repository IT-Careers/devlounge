@model StatisticsViewModel

<div class="forum-content-sidebar-component">
    <header class="forum-content-sidebar-component-header">Forum Statistics</header>
    <main class="forum-content-sidebar-component-content">
        <div class="forum-content-group">
            <label class="forum-content-group-label">Threads:</label>
            <span class="forum-content-group-value">@Model.ThreadsCount</span>
        </div>
        <div class="forum-content-group">
            <label class="forum-content-group-label">Users:</label>
            <span class="forum-content-group-value">@Model.UsersCount</span>
        </div>
        <div class="forum-content-group">
            <label class="forum-content-group-label">Replies:</label>
            <span class="forum-content-group-value">@Model.RepliesCount</span>
        </div>
        <div class="forum-content-group">
            <label class="forum-content-group-label">Latest Member:</label>
            <span class="forum-content-group-value">@Model.LatestMember</span>
        </div>
    </main>
</div>